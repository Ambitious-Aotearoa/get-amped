{% set posts = craft.entries().section('residential').all() %}
{% block content %}

<div class="services">
   <div class="container-fluid dark hero-header" >
      <div class="wrapper">
         <div class="d-flex flex-column">
            <div class="">
               <h1>Residential electrical work</h1>
            </div>
         </div>
      </div>
   </div>

<div class="wrapper-svg">
   <div class="residential-svg">
      <svg width="2000" height="500" viewBox="0 0 2000 500" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M1104.37 431.818L1104.37 68.1816L896.633 68.1816L896.633 431.818L1104.37 431.818Z" stroke="white" stroke-width="2" stroke-miterlimit="10"/>
